<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    x:Class="XamarinApplication.Views.SerieDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:i18n="clr-namespace:XamarinApplication.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    Title="{i18n:Translate Series}"
    mc:Ignorable="d">
    <StackLayout
        Margin="5,8,5,5"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <ScrollView Orientation="Vertical">
            <Frame
                Margin="2"
                BackgroundColor="#FDFFFC"
                BorderColor="#FDFFFC"
                HasShadow="true">
                <StackLayout>
                    <StackLayout
                        Margin="-15"
                        HorizontalOptions="End"
                        VerticalOptions="End">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Close_Serie_Details" />
                        </StackLayout.GestureRecognizers>
                        <Image
                            HeightRequest="40"
                            Source="close.png"
                            WidthRequest="40" />
                    </StackLayout>
                    <StackLayout>
                        <Label
                            Margin="5,5,5,10"
                            FontAttributes="Bold"
                            FontSize="Large"
                            HorizontalOptions="Center"
                            Text="{i18n:Translate Serie}"
                            TextColor="Black" />
                        <BoxView HeightRequest="1" Color="LightGray" />
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                FontAttributes="Bold"
                                Text="{i18n:Translate Serie}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding Serie.serie}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                FontAttributes="Bold"
                                Text="{i18n:Translate Initials}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding Serie.initials}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                FontAttributes="Bold"
                                Text="{i18n:Translate EffortIncrease}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="{Binding Serie.effortIncrease}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                FontAttributes="Bold"
                                Text="{i18n:Translate SecondsIncrease}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="3"
                                Grid.Column="1"
                                Text="{Binding Serie.secondsIncreaseEffort}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="4"
                                Grid.Column="0"
                                FontAttributes="Bold"
                                Text="{i18n:Translate Limits}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="4"
                                Grid.Column="1"
                                Text="{Binding Serie.limits}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="5"
                                Grid.Column="0"
                                FontAttributes="Bold"
                                Text="{i18n:Translate TimeStaticity}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="5"
                                Grid.Column="1"
                                Text="{Binding Serie.timeStaticity}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="6"
                                Grid.Column="0"
                                FontAttributes="Bold"
                                Text="{i18n:Translate Exercice}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="6"
                                Grid.Column="1"
                                Text="{Binding Serie.exercise.name}"
                                TextColor="Black" />
                            <Label
                                Grid.Row="7"
                                Grid.Column="0"
                                FontAttributes="Bold"
                                Text="Exercice Typology"
                                TextColor="Black" />
                            <Label
                                Grid.Row="7"
                                Grid.Column="1"
                                Text="{Binding Serie.exercise.exerciseTypologie.detail}"
                                TextColor="Black" />
                        </Grid>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </ScrollView>
    </StackLayout>
